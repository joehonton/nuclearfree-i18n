class elThankyou extends elBasePage
{
	//---------------------------------
	function __construct( $language, $pagename )
	{
		parent::__construct( $language, $pagename );
	}
	
	//=============================================================================
	// Standard <head> items
	//=============================================================================
	
	//---------------------------------
	function pageTitle()
	{
		return "Σας ευχαριστούμε για τη διάπραξη σε έναν κόσμο χωρίς πυρηνική σχάση";
	}
	
	//---------------------------------
	function metaDescription()
	{
		return "Με αρκετά φωνές που μιλούν με θάρρος για τους κινδύνους της πυρηνικής σχάσης, μπορούμε να κάνουμε αυτό ένα κόσμο χωρίς την πυρηνική σχάση.";
	}
	
	//---------------------------------
	function metaKeywords()
	{
		return "κόσμο, η πυρηνική, σχάση";
	}

	//=============================================================================
	// Content
	//=============================================================================
	
	//---------------------------------
	function content( $personal_name, $num_pledges, $this_date )
	{
return <<<ENDHTML
		<h1>Σας ευχαριστώ για την υπόσχεσή σας</h1>

		<p>Σας ευχαριστώ, $personal_name.</p>
		
