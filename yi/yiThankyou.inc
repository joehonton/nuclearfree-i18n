class yiThankyou extends yiBasePage
{
	//---------------------------------
	function __construct( $language, $pagename )
	{
		parent::__construct( $language, $pagename );
	}
	
	//=============================================================================
	// Standard <head> items
	//=============================================================================
	
	//---------------------------------
	function pageTitle()
	{
		return "דאנק איר פֿאַר קאַמיטינג צו אַ וועלט אָן יאָדער פישאַן";
	}
	
	//---------------------------------
	function metaDescription()
	{
		return "מיט גענוג קולות גערעדט קעריידזשאַסלי וועגן די דיינדזשערז פון יאָדער פישאַן, מיר קענען מאַכן דעם אַ וועלט אָן יאָדער פישאַן.";
	}
	
	//---------------------------------
	function metaKeywords()
	{
		return "וועלט, יאָדער, פישאַן";
	}

	//=============================================================================
	// Content
	//=============================================================================
	
	//---------------------------------
	function content( $personal_name, $num_pledges, $this_date )
	{
return <<<ENDHTML
		<h1>דאנק איר פֿאַר דיין צוזאָג</h1>
		
