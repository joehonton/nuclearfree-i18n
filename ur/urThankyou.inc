class urThankyou extends urBasePage
{
	//---------------------------------
	function __construct( $language, $pagename )
	{
		parent::__construct( $language, $pagename );
	}
	
	//=============================================================================
	// Standard <head> items
	//=============================================================================
	
	//---------------------------------
	function pageTitle()
	{
		return "جوہری وکھنڈن کے بغیر ایک ایسی دنیا کا ارتکاب کرنے کے لئے شکریہ";
	}
	
	//---------------------------------
	function metaDescription()
	{
		return "کافی آوازیں جوہری وکھنڈن کے خطرات کے بارے بہادری بات کے ساتھ، ہم نے جوہری وکھنڈن کے بغیر یہ ایک دنیا بنا سکتے ہیں.";
	}
	
	//---------------------------------
	function metaKeywords()
	{
		return "دنیا، جوہری وکھنڈن";
	}

