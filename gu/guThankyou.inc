class guThankyou extends guBasePage
{
	//---------------------------------
	function __construct( $language, $pagename )
	{
		parent::__construct( $language, $pagename );
	}
	
	//=============================================================================
	// Standard <head> items
	//=============================================================================
	
	//---------------------------------
	function pageTitle()
	{
		return "ફિસન વગર દુનિયા માટે સંગ્રહવાથી બદલ આભાર";
	}
	
	//---------------------------------
	function metaDescription()
	{
		return "પૂરતી અવાજો ફિસન ના જોખમો વિશે હિંમતથી બોલતા સાથે, અમે ફિસન વગર આ એ વિશ્વની કરી શકો છો.";
	}
	
	//---------------------------------
	function metaKeywords()
	{
		return "વિશ્વ, ફિસન";
	}

	//=============================================================================
	// Content
	//=============================================================================
	
	//---------------------------------
	function content( $personal_name, $num_pledges, $this_date )
	{
return <<<ENDHTML
		<h1>તમારા વચન માટે આભાર</h1>

		<p>તમે $personal_name આભાર.</p>
		
		<p>હું ખરેખર આ મહત્વપૂર્ણ શોધ પર તમારા સપોર્ટ કર્યા પ્રશંસા કરીએ છીએ. તમે શપથ લેવામાં આવ્યા છે જે $num_pledges અન્ય જોડાયા છે.</p> 
		
		<p>હિંમત રાખવા યાદ રાખો - સમય યોગ્ય છે જ્યારે આપવું. તમારા મિત્રો અને પરિચિતોને તમે ફિસન વગર દુનિયા માને છે કે છો.</p>
		
		<p><strong>હું એક સાથે અમે ફરક પડી શકે છે કે આશા છે.</strong></p>
		
		<p>Joseph Honton<br />
		$this_date</p>
ENDHTML;
	}
