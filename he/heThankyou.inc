	{
		parent::__construct( $language, $pagename );
	}
	
	//=============================================================================
	// Standard <head> items
	//=============================================================================
	
	//---------------------------------
	function pageTitle()
	{
		return "תודה לך על שתתחייב עולם ללא ביקוע גרעיני";
	}
	
	//---------------------------------
	function metaDescription()
	{
		return "עם מספיק קולות מדברים באומץ על הסכנות של ביקוע גרעיני, אנו יכולים להפוך את העולם הזה בלי ביקוע גרעיני.";
