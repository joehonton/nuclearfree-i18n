require_once( __DIR__ . '/igBasePage.inc' );


//-------------------------------------
class igPledge extends igBasePage
{
	//---------------------------------
	function __construct( $language, $pagename )
	{
		parent::__construct( $language, $pagename );
	}
	
	//=============================================================================
	// Standard <head> items
	//=============================================================================
	
	//---------------------------------
	function pageTitle()
	{
		return "A promise towards a world without fission";
	}
	
	//---------------------------------
	function metaDescription()
	{
		return "Join together with fellow citizens of the world in promising to speak courageously about the dangers imposed by the use of nuclear fission.";
	}
	
	//---------------------------------
	function metaKeywords()
	{
		return "nuclear fission,nuclear energy,nuclear weapons,speak courageously,promise,solemnly pledge,swear,oath";
	}
	
	//=============================================================================
	// Buttons
	//=============================================================================
	
	//---------------------------------
	function pledgeButton()
	{
		return "I promise to speak courageously";
	}
	
	//---------------------------------
	function pledgeButtonAlt()
	{
		return 'Swear the “no more fission” oath now!';
	}
	
	//=============================================================================
	// Form input title attributes
	//=============================================================================
	
	//---------------------------------
	function personalName()
	{
		return "Given name and family name";
	}

	//---------------------------------
	function city()
	{
		return "Your city or hometown";
	}
	
	//---------------------------------
	function country()
	{
		return "Your nationality";
	}
	
	//=============================================================================
	// Form errors
	//=============================================================================
	
	//---------------------------------
	function missingPersonalName()
	{
		return "The oath would be more effective if you provided your name. Could you please fill in the form?";
	}
	
	//---------------------------------
	function missingCityAndCountry()
	{
		return 'Your oath would be more meaningful if you provided your hometown and nationality, but if you want to omit them, just press the "I promise" button once more.';
	}
	
	//=============================================================================
	// Content
	//=============================================================================
	
	//---------------------------------
	function content( $personal_name, $this_date, $city, $country )
	{
return <<<ENDHTML
			<h1>A promise towards a world without fission</h1>
			
			<p>I, $personal_name, unite with my fellow citizens of the world in promising to speak courageously about the dangers imposed upon Earth and all its inhabitants by the use of nuclear fission in the generation of electricity and in military weapons.</p>
			
			<p><strong>I solemnly pledge to speak courageously about the dangers of nuclear energy.</strong> The merits of using nuclear fission in the generation of electricity are exaggerated, and the true long-term risks are too great to continue.</p>
			
			<ol>
				<li>Electricity generated by nuclear power plants is not cheaper than other forms of electricity generation.</li>
				<li>Nuclear power plants cannot be made 100% safe from catastrophic failure.</li>
				<li>The isotopic waste created by nuclear fission will remain toxic for a very long time, and we have no place to put it.</li>
				<li>Nuclear energy is not clean energy: the mining, milling, and enrichment of uranium ore creates large ecological waste-lands that are harmful to humans and wildlife.</li>
				<li>Enriched uranium for power plants and highly enriched uranium for nuclear weapons are made with the same equipment.</li>
			</ol>
			
			<p><strong>I solemnly pledge to speak courageously about the military use of nuclear weapons.</strong> The time has come for all nations to renounce the use of nuclear weapons.</p>
			
			<ol start='6'>
				<li>There is no morally legitimate reason for any individual, organization, or state to use nuclear weapons.</li>
				<li>The possession of nuclear weapons as a deterrent is a failed policy.</li>
				<li>Nations with nuclear weapons should develop plans for safely dismantling their arsenal.</li>
				<li>Nations with nuclear capabilities should engage in negotiations whose goal is the complete abolition of all nuclear weapons.</li>
				<li>No one should pursue the development of new nuclear weapons.</li>
			</ol>
			
			<p>Sworn to this day, $this_date, in <br />
			$city, $country.</p>
ENDHTML;
	}
}
