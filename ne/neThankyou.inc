class neThankyou extends neBasePage
{
	//---------------------------------
	function __construct( $language, $pagename )
	{
		parent::__construct( $language, $pagename );
	}
	
	//=============================================================================
	// Standard <head> items
	//=============================================================================
	
	//---------------------------------
	function pageTitle()
	{
		return "न्युक्लियर विखंडन नभएको एउटा संसार गन लागि धन्यवाद";
	}
	
	//---------------------------------
	function metaDescription()
	{
		return "पर्याप्त आवाज अणु विखंडन खतराबारे साहसी भई बोल्ने संग, हामी न्युक्लियर विखंडन बिना यो संसारमा गर्न सक्छन्।";
	}
	
	//---------------------------------
	function metaKeywords()
	{
		return "संसारमा, न्युक्लियर विखंडन";
	}

	//=============================================================================
	// Content
	//=============================================================================
	
	//---------------------------------
	function content( $personal_name, $num_pledges, $this_date )
	{
return <<<ENDHTML
		<h1>आफ्नो प्रतिज्ञा लागि धन्यवाद</h1>

		<p>तपाईं $personal_name धन्यवाद।</p>
		
		<p>म वास्तवमा यो महत्वपूर्ण खोज मा आफ्नो समर्थन भएको कदर। तपाईं शपथ लिएका छन् जसले $num_pledges अरूलाई सामेल भएका छन्।</p> 
		
		<p>साहसी हुनु सम्झना - सही समय छ जब दिन्छन्। आफ्नो साथीभाइ तथा चिनजान तपाईं अणु विखंडन बिना संसारमा विश्वास भनेर थाह दिनुहोस्।</p>
		
		<p><strong>म सँगै हामी एक फर्क गर्न सक्छन् भन्ने आशा।</strong></p>
		
		<p>Joseph Honton<br />
		$this_date</p>
ENDHTML;
	}
}
